---
import Freeplan from "@assets/pricing/freeplan.svg";
import PriceFeatureList from "@modules/pricing/sections/PriceFeatureList.astro";
import { Image } from "astro:assets";
---

<div class="flex flex-col gap-8 border p-8 rounded-3xl w-1/3">
  <div class="flex flex-col gap-4">
    <Image src={Freeplan} alt="Free plan" />
    <h3 class="text-2xl font-medium">Free Plan</h3>
    <p class="text-base text-[#878787] border-b pb-2 font-medium">
      You can explore basic Incenta features for free if you're just getting
      started.
    </p>
  </div>
  <p class="text-[64px] font-semibold">
    $0<span class="text-base font-medium text-[#878787]">/USD</span>
  </p>
  <div class="flex flex-col gap-6">
    {
      [
        "100 workflowtask",
        "1000+ app integrations",
        "500  multi-step calls",
        "Single user",
      ].map((item) => <PriceFeatureList description={item} />)
    }
    <button
      class="transition-all flex gap-4 justify-center items-center bg-primary hover:bg-primaryHover text-white text-base px-8 py-3 w-full rounded-full"
      >Try this plan</button
    >
  </div>
</div>
