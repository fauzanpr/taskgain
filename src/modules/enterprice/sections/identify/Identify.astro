---
import Container from "@components/Container";
import HeroSection from "@components/Homepage/HeroSection.astro";
import SeamlessImg from "@assets/enterprice/seamless.svg";
import StatusImg from "@assets/enterprice/status.svg";
import ListCheckCircle from "@components/ListCheckCircle.astro";

import { Image } from "astro:assets";
import { seamlessCollaboration, permiumServices } from "@utils/constant";
---

<section>
  <Container>
    <div class="py-48 flex flex-col gap-16">
      <HeroSection
        title="Identify, manage, & validate product ideas"
        description="Define the project scope with confidence and meet stakeholders' needs. Save time and get on the same page with a user-focused approach and a visual backlog."
      />
      <div class="flex flex-col lg:flex-row gap-8 items-center">
        <Image src={SeamlessImg} alt="Seamless Image" />
        <div class="flex flex-col gap-4 lg:w-1/2">
          <h2 class="text-3xl lg:text-[40px] font-semibold">Seamless collaboration</h2>
          {
            seamlessCollaboration.map((content) => (
              <ListCheckCircle description={content} />
            ))
          }
        </div>
      </div>
      <div class="flex flex-col lg:flex-row gap-8 items-center">
        <div class="flex flex-col gap-4 lg:w-1/2 order-2 lg:order-1">
          <h2 class="text-3xl lg:text-[40px] font-semibold">Visualize progress with chart</h2>
          {
            permiumServices.map((content) => (
              <ListCheckCircle description={content} />
            ))
          }
        </div>
        <Image src={StatusImg} alt="Status Image" />
      </div>
    </div>
  </Container>
</section>
