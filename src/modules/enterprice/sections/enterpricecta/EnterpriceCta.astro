---
import Button from "@components/Button";
import { Image } from "astro:assets";
import Rectangle from "@assets/icon/rectangle.svg";
---

<section class="bg-gray-400 flex flex-col gap-8 p-16 text-white rounded-xl">
  <div class="flex gap-2">
    <Image src={Rectangle} alt="" />
    <p>Schedule a LIVE demo</p>
  </div>
  <h2 class="w-2/3 font-semibold text-3xl">
    Explore the app with a guided tour and discuss how it would fit into your
    processes!
  </h2>
  <Button text="Book Demo" theme="dark" />
</section>
