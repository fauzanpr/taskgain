---
import ButtonArrow from "@components/ButtonArrow";
import FaqList from "@modules/home/sections/faq/FaqList";
import Container from "@components/Container";
---

<section class="py-28 bg-faqBg bg-cover">
  <Container>
    <div class="flex flex-col gap-8 lg:flex-row">
      <div class="flex flex-col gap-8 items-center lg:items-start lg:w-1/2">
        <h2 class="hidden lg:block text-[48px] font-semibold">
          Frequently asked <br /> questions
        </h2>
        <h2 class="text-3xl text-center font-semibold lg:hidden">
          Frequently asked questions
        </h2>
        <p class="text-gray-500 text-center lg:text-start">
          Everything you need to know about the product and billing.
        </p>
        <div class="w-full lg:w-fit flex justify-center">
          <ButtonArrow text="See more FAQ" />
        </div>
      </div>
      <div class="lg:w-1/2">
        <FaqList client:load />
      </div>
    </div>
  </Container>
</section>
