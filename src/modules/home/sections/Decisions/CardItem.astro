---
import { Image } from "astro:assets";

const { imageUrl, title, desc } = Astro.props;
---

<div class="rounded-xl border border-gray-200 flex gap-4 items-start bg-white shadow-sm p-4">
  <Image src={imageUrl} alt="Ikon map" width={45} />
  <div class="w-full">
    <p class="text-lg font-medium mb-4">{title}</p>
    <p class="text-base font-light text-gray-500">
      {desc}
    </p>
  </div>
</div>
