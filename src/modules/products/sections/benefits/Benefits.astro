---
import Container from "@components/Container";
import BenefitsList from "./BenefitsList";
import BenefitsImg from "@assets/product/benefits/benefitsImg.svg";

import { Image } from "astro:assets";
---

<section>
  <Container>
    <div class="flex flex-col lg:flex-row gap-16 pt-48 justify-between items-start">
      <Image src={BenefitsImg} alt="Benefit Image" />
      <div class="lg:w-1/2 flex flex-col gap-8">
        <h2 class="text-4xl text-center lg:text-5xl font-medium lg:leading-[57.4px] lg:text-start">
          7 benefits of user <br /> story maps
        </h2>
        <BenefitsList client:load />
      </div>
    </div>
  </Container>
</section>
