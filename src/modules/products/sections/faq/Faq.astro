---
import ButtonArrow from "@components/ButtonArrow";
import ProductFaqList from "./ProdctFaqList";
import Container from "@components/Container";
---

<section>
  <Container>
    <div class="flex flex-col gap-16 pt-48">
      <!-- headertitle -->
      <div class="flex gap-8 flex-col lg:gap-4 lg:flex-row">
        <h2
          class="lg:w-1/2 text-3xl text-center lg:text-start lg:text-5xl font-semibold lg:leading-[57.6px]"
        >
          Story Mapping Frequently asked questions
        </h2>
        <div class="lg:w-1/2">
          <p
            class="text-base lg:text-lg text-gray-400 mb-8 text-center lg:text-start"
          >
            Explore our comprehensive FAQ section to find answers to a wide
            range of questions and gain a deeper understanding of our products
            and services.
          </p>
          <div class="flex justify-center lg:justify-start">
            <ButtonArrow text="See more FAQs" />
          </div>
        </div>
      </div>
      <!-- faq list -->
      <div>
        <ProductFaqList client:load />
      </div>
    </div>
  </Container>
</section>
