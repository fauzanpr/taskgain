---
import ButtonArrow from "@components/ButtonArrow";
import ProductFaqList from "./ProdctFaqList";
---

<section class="flex flex-col gap-16">
    <!-- headertitle -->
    <div class="flex gap-4">
        <h2 class="w-1/2 text-3xl font-semibold">Story Mapping Frequently asked questions</h2>
        <div class="w-1/2">
            <p class="text-lg text-gray-400 mb-8">Explore our comprehensive FAQ section to find answers to a wide range of questions and gain a deeper understanding of our products and services.</p>
            <ButtonArrow text="See more FAQs" />
        </div>
    </div>
    <!-- faq list -->
    <div>
        <ProductFaqList client:load />
    </div>
</section>