---
import ArrowRightDark from "@assets/icon/arrow-right-dark.svg";

import { Image } from "astro:assets";
const { title, description, reader } = Astro.props;
---

<div class="flex flex-col gap-6 p-8 shadow-md">
    <div class="flex justify-between items-center">
        <div class="h-4 w-4 bg-gray-500 rounded-full" />
        <p class="text-gray-500 font-light">{ reader }</p>
    </div>
    <h3 class="text-3xl font-semibold">{ title }</h3>
    <div class="flex justify-between gap-4">
        <p class="text-gray-400">{ description }</p>
        <button class="border border-gray-500 px-6 rounded-full hover:bg-gray-300">
            <Image src={ArrowRightDark} alt="Arrow right" />
        </button>
    </div>
</div>