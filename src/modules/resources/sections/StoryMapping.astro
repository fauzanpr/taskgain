---
import Button from "@components/Button";
import EbookFeatureItem from "@modules/products/sections/ebook/EbookFeatureItem.astro";
import { ebookFeaturesDataLeft, ebookFeaturesDataRight } from "@utils/constant";
import EbookImg from "@assets/product/ebook/ebookImg.svg";
import Container from "@components/Container";

import { Image } from "astro:assets";
---

<section class="bg-[#FAFAFA]">
  <Container>
    <div
      class="flex flex-col lg:flex-row gap-16 justify-between items-center pb-32"
    >
      <div class="flex flex-col gap-8 h-fit lg:w-2/3 xl:w-1/2">
        <div class="flex flex-col gap-8">
          <h2
            class="text-3xl lg:text-5xl text-center lg:text-start font-semibold"
          >
            Free story mapping ebook
          </h2>
          <p
            class="text-base lg:text-lg font-normal text-gray-400 text-center lg:text-start"
          >
            Master the Art of Story Mapping with Our In Depth eBook Your Path to
            Agile Project Excellence
          </p>
        </div>
        <div class="flex flex-col gap-8 md:flex-row md:justify-around lg:justify-between">
          <div class="flex flex-col gap-4">
            <p class="text-base lg:text-lg text-gray-500">50 handpicked hints on</p>
            {
              ebookFeaturesDataLeft.map((left) => (
                <EbookFeatureItem description={left} />
              ))
            }
          </div>
          <div class="flex flex-col gap-4">
            <p class="text-base lg:text-lg text-gray-500">Bonus materials included</p>
            {
              ebookFeaturesDataRight.map((right) => (
                <EbookFeatureItem description={right} />
              ))
            }
          </div>
        </div>
        <div class="flex justify-center lg:justify-start">
          <Button text="Download" />
        </div>
      </div>
      <Image src={EbookImg} alt="Ebook Image" class="lg:w-1/3 xl:w-1/2" />
    </div>
  </Container>
</section>
