---
import ButtonArrow from "./ButtonArrow";
import Container from "./Container";

const { title, desc } = Astro.props;
---

<section class="py-48">
  <Container>
    <div class="flex flex-col gap-8">
      <h1
        class="text-[64px] leading-[76px] font-semibold text-center w-2/3 mx-auto"
      >
        { title }
      </h1>
      <p class="text-lg text-[#878787] w-4/5 text-center mx-auto">
        { desc }
      </p>
      <div class="flex justify-center">
          <ButtonArrow text="See Our Resources" type="rightup" />
      </div>
    </div>
  </Container>
</section>
