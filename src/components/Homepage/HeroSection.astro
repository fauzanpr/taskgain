---
const { title, description, isWhite } = Astro.props;
---

<div class="flex flex-col gap-8 text-center xl:w-3/4 mx-auto">
  <h2 class={`text-5xl font-semibold ${isWhite && "text-white"}`}>
    { title }
  </h2>
  <p class={`text-lg font-normal text-gray-500 ${isWhite && "text-[#C2C2C2]"}`}>
    { description }
  </p>
</div>
